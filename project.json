{
  "$id": "https://codemeta.de/schemas/project",
  "title": "Project",
  "name": "project",
  "collection": "projects",
  "description": "A project",
  "type": "object",
  "i18n": {
    "de": {
      "singular": "Projekt",
      "plural": "Projekte",
      "description": "Projekte sind zeitlich befristete Vorhaben, die darauf abzielen, ein einzigartiges Produkt, eine Dienstleistung oder ein Ergebnis zu schaffen."
    }
  },
  "properties": {
    "title": {
      "description": "The title of the project",
      "type": "string"
    },
    "description": {
      "description": "The description of the project",
      "type": "string"
    },
    "projectKey": {
      "description": "The unique key of the project",
      "type": "string"
    },
    "linkedParty": {
      "description": "The party linked to the project",
      "type": ["string", "null"],
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/party",
      "objectId": true
    },
    "assignedParty": {
      "description": "The party assigned to the project",
      "type": ["string", "null"],
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/party",
      "objectId": true
    },
    "startDate": {
      "description": "The start date of the project",
      "type": ["string", "null"],
      "format": "date-time"
    },
    "dueDate": {
      "description": "The due date of the project",
      "type": ["string", "null"],
      "format": "date-time"
    },
    "status": {
      "description": "The status of the project",
      "type": "string"
    },
    "appointments": {
      "type": "array",
      "description": "The list of all appointments",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the appointment"
          },
          "description": {
            "type": "string",
            "description": "The description of the appointment"
          },
          "startDate": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "The start date of the appointment"
          },
          "status": {
            "type": ["string", "null"],
            "enum": [null, "CANCELLED", "PLANNED", "DONE"]
          },
          "assignedParties": {
            "type": "array",
            "items": {
              "type": "string",
              "relation": "manyToOne",
              "target": "https://codemeta.de/schemas/party",
              "objectId": true
            },
            "description": "Zugeordnete Monteure/Parteien"
          }
        }
      }
    }
  },
  "required": ["title"],
  "searchable": true,
  "titleField": ["title"],
  "descriptionField": ["description"],
  "icon": "projects",
  "baseUrl": "/project"
}
