{
  "$id": "https://codemeta.de/schemas/tool",
  "title": "Tool",
  "name": "tool",
  "collection": "tools",
  "description": "internal tool checkin and checkout",
  "i18n": {
    "de": {
      "singular": "Neuigkeit",
      "plural": "Neuigkeiten",
      "description": "Interne Werkzeuge Erfassung"
    }
  },
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the tool."
    },
    "HistoryContent": {
      "type": "string",
      "description": "The content of the history"
    },
    "description": {
      "type": "string",
      "description": "A short description of the tool."
    },
    "content": {
      "type": "string",
      "description": "The content of the tool."
    },
    "returnComment": {
      "type": "string",
      "description": "Brief explanation of why the tool was put back"
    },
    "status": {
      "type": "string",
      "description": "The state of the tool.",
      "enum": ["AVAILABLE", "MAINTENANCE", "TAKEN"]
    },
    "toolStatus": {
      "type": "string",
      "description": "The state of the tool.",
      "enum": ["MISSING", "BROKEN", "OK"]
    },
    "locationId": {
      "type": "string",
      "description": "The location of the tool.",
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/location",
      "objectId": true
    },
    "takenBy": {
      "type": ["string", "null"],
      "description": "Information who took it.",
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/user",
      "objectId": true,
      "database": "config"
    },
    "takenAt": {
      "type": ["string", "null"],
      "description": "Information when it was taken.",
      "format": "date-time"
    },
    "returnedAt": {
      "type": ["string", "null"],
      "description": "Information when it was returned.",
      "format": "date-time"
    },
    "items": {
      "description": "",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "description": "The title of the item.",
            "type": "string"
          },
          "description": {
            "description": "The discription of the item.",
            "type": "string"
          },
          "count": {
            "description": "The count shows how much is taken.",
            "type": "number"
          }
        }
      }
    }
  },
  "unevaluatedProperties": true
}
