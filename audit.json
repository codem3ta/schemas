{
  "$id": "https://codemeta.de/schemas/audit",
  "title": "Audit",
  "name": "audit",
  "collection": "audits",
  "description": "An audit",
  "type": "object",
  "i18n": {
    "de": {
      "singular": "Audit",
      "plural": "Audits",
      "description": "Audits sind systematische Überprüfungen und Bewertungen von Prozessen, Systemen oder Produkten, um deren Konformität mit festgelegten Standards und Vorschriften sicherzustellen."
    }
  },
  "properties": {
    "title": {
      "description": "The title of the project",
      "type": "string"
    },
    "description": {
      "description": "The description of the project",
      "type": "string"
    },
    "type": {
      "description": "The type of the audit",
      "type": "string"
    },
    "auditKey": {
      "description": "The unique key of the audit",
      "type": "string"
    },
    "auditReportKey": {
      "description": "The unique key of the audit report given by the audit agency",
      "type": "string"
    },
    "linkedProject": {
      "description": "The project linked to the audit",
      "type": ["string", "null"],
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/project",
      "objectId": true
    },
    "auditAgencyParty": {
      "description": "The agency party responsible for the audit",
      "type": ["string", "null"],
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/party",
      "objectId": true
    },
    "startDate": {
      "description": "The start date of the audit",
      "type": ["string", "null"],
      "format": "date-time"
    },
    "scheduledAuditDate": {
      "description": "The scheduled date of the audit",
      "type": ["string", "null"],
      "format": "date-time"
    },
    "auditDate": {
      "description": "The actual date of the audit",
      "type": ["string", "null"],
      "format": "date-time"
    },
    "auditCompletionDate": {
      "description": "The actual date of the audit",
      "type": ["string", "null"],
      "format": "date-time"
    },
    "auditStatus": {
      "description": "The status of the audit",
      "type": ["string", "null"],
      "enum": ["FAILED", "PASSED", null],
      "default": null
    },
    "status": {
      "description": "The status of the audit",
      "type": "string",
      "enum": ["NEW", "SCHEDULED", "IN_PROGRESS", "COMPLETED", "CANCELLED"]
    },
    "tags": {
      "description": "The tags associated with the audit",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "appointments": {
      "type": "array",
      "description": "The list of all appointments",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the appointment"
          },
          "description": {
            "type": "string",
            "description": "The description of the appointment"
          },
          "startDate": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "The start date of the appointment"
          },
          "status": {
            "type": ["string", "null"],
            "enum": [null, "CANCELLED", "PLANNED", "DONE"]
          },
          "assignedParties": {
            "type": "array",
            "items": {
              "type": "string",
              "relation": "manyToOne",
              "target": "https://codemeta.de/schemas/party",
              "objectId": true
            },
            "description": "Zugeordnete Monteure/Parteien"
          }
        }
      }
    },
    "protocol": {
      "type": ["object", "null"],
      "description": "Detailed execution protocol of the audit",
      "properties": {
        "startedAt": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "The exact timestamp when the audit execution started"
        },
        "endedAt": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "The exact timestamp when the audit execution ended"
        },
        "comment": {
          "type": "string",
          "description": "General comments or notes about the audit execution"
        },
        "remarkRecords": {
          "type": "array",
          "description": "A list of remarks, observations, or findings recorded during the audit",
          "items": {
            "type": "object",
            "properties": {
              "recordAt": {
                "type": "string",
                "format": "date-time",
                "description": "The date and time when the remark was recorded"
              },
              "comment": {
                "type": "string",
                "description": "The content of the remark or finding"
              },
              "recordBy": {
                "type": ["string", "null"],
                "relation": "manyToOne",
                "target": "https://codemeta.de/schemas/user",
                "objectId": true,
                "description": "The party or user who recorded this remark"
              }
            }
          }
        }
      }
    }
  },
  "required": [],
  "searchable": true,
  "titleField": ["title"],
  "descriptionField": ["description"],
  "icon": "audit",
  "baseUrl": "/audit"
}
