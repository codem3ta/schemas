{
  "$id": "https://codemeta.de/schemas/endpoint",
  "type": "object",
  "collection": "assets",
  "allOf": [
    {
      "$ref": "https://codemeta.de/schemas/asset"
    }
  ],
  "i18n": {
    "de": {
      "singular": "Endpoint",
      "plural": "Endpoint",
      "description": "Endpoint"
    }
  },
  "properties": {
    "networkInterfaces": {
      "description": "The network interfaces of the endpoint",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ipv4": {
            "description": "The IP address of the network interface",
            "type": "string",
            "format": "ipv4"
          },
          "mac": {
            "description": "The MAC address of the network interface",
            "type": "string",
            "pattern": "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$"
          },
          "network": {
            "description": "The network name or identifier",
            "type": "string"
          }
        },
        "required": ["ipv4"]
      }
    },
    "os": {
      "description": "The operating system of the endpoint",
      "type": "string"
    },
    "osVersion": {
      "description": "The version of the operating system",
      "type": "string"
    },
    "serialNumber": {
      "description": "The serialNumber of the Endpoint",
      "type": "string"
    },
    "manufacturer": {
      "description": "The manufacturer of the Endpoint",
      "type": "string"
    },
    "model": {
      "description": "The model of the Endpoint",
      "type": "string"
    },
    "articleNumber": {
      "description": "The articlenumber of the Endpoint",
      "type": "string"
    },
    "assignedEmployee": {
      "description": "The main user of this PC",
      "type": "string",
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/party",
      "objectId": true
    },
    "locationComment": {
      "description": "A Placeholder to store the location as a String until we use the location Schema",
      "type": "string"
    }
  },
  "name": "endpoint"
}
