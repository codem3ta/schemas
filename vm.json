{
  "$id": "https://codemeta.de/schemas/vm",
  "type": "object",
  "collection": "assets",
  "allOf": [
    {
      "$ref": "https://codemeta.de/schemas/endpoint"
    }
  ],
  "i18n": {
    "de": {
      "singular": "VM",
      "plural": "VM",
      "description": "VM"
    }
  },
  "properties": {
    "title": {
      "description": "The title of the virtual machine.",
      "type": "string"
    },
    "type": {
      "type": "string",
      "const": "vm",
      "default": "vm"
    },
    "host": {
      "description": "The host of the virtual maschine.",
      "type": "string",
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/host",
      "objectId": true
    },
    "hostExternalId": {
      "description": "placeholder, the id of the host in Tanss",
      "type": "string"
    },
    "state": {
      "description": "The state of the virtual machine.",
      "type": "string",
      "enum": ["running", "stopped", "paused"]
    },
    "desiredState": {
      "description": "The desired state of the virtual machine.",
      "type": ["string", "null"],
      "enum": ["running", "stopped", "relocated", null],
      "default": null
    },
    "cpus": {
      "description": "The cpu count of the virtual machine.",
      "type": "number"
    },
    "memory": {
      "description": "The memory amount of the virtual machine.",
      "type": "number"
    },
    "shutdownThreshold": {
      "description": "The shutdown Threshold",
      "type": "number"
    },
    "dependencies": {
      "description": "The interface with the credentials.",
      "type": "array",
      "items": {
        "type": "string",
        "relation": "manyToOne",
        "target": "https://codemeta.de/schemas/vm",
        "objectId": true
      }
    },
    "interface": {
      "description": "The interface with the credentials.",
      "type": "string",
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/interface",
      "objectId": true,
      "database": "config"
    },
    "excludeFromStart": {
      "description": "Determines if the vm should be excluded from the start process.",
      "type": "boolean",
      "default": false
    },
    "excludeFromStop": {
      "description": "Determines if the VM should be excluded from the stop process.",
      "type": "boolean",
      "default": false
    },
    "autoRelocate": {
      "description": "Determines if the VM should be automatically relocated to another host in case of a failure.",
      "type": "boolean",
      "default": false
    }
  },
  "required": [],
  "name": "vm",
  "unevaluatedProperties": true
}
