{
  "$id": "https://codemeta.de/schemas/pc",
  "type": "object",
  "collection": "assets",
  "allOf": [
    {
      "$ref": "https://codemeta.de/schemas/endpoint"
    }
  ],
  "i18n": {
    "de": {
      "singular": "PC",
      "plural": "PC",
      "description": "PC"
    }
  },
  "properties": {
    "type": {
      "type": "string",
      "const": "pc",
      "default": "pc"
    },
    "title": {
      "type": "string"
    },
    "manufacturer": {
      "description": "The manufacturer of the PC.",
      "type": "string"
    },
    "model": {
      "description": "The Model of the PC.",
      "type": "string"
    },
    "cpus": {
      "description": "The CPU of the PC.",
      "type": "string"
    },
    "os": {
      "description": "The Operating System of the PC.",
      "type": "string"
    },
    "hardDrive": {
      "description": "The Hard Drive of the PC.",
      "type": "string"
    },
    "mainboard": {
      "description": "The Mainboard of the PC.",
      "type": "string"
    },
    "bios": {
      "description": "The BIOS of the PC.",
      "type": "string"
    },
    "ram": {
      "description": "The RAM of the PC.",
      "type": "string"
    },
    "graphicsCard": {
      "description": "The Graphics Card of the PC.",
      "type": "string"
    },
    "networkCard": {
      "description": "The Network Card of the PC.",
      "type": "string"
    },
    "soundCard": {
      "description": "The Sound Card of the PC.",
      "type": "string"
    },
    "printers": {
      "type": "array",
      "description": "An Array with the Printers connected with this PC.",
      "items": {
        "type": "string",
        "relation": "manyToOne",
        "target": "https://codemeta.de/schemas/printer",
        "objectId": true,
        "database": "config"
      }
    },
    "room ": {
      "description": "The room where the PC is isntalled.",
      "type": "string",
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/room",
      "objectId": true,
      "database": "config"
    },
    "assignedEmployee": {
      "description": "The main user of this PC",
      "type": "string",
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/user",
      "objectId": true,
      "database": "config"
    },
    "localUsers": {
      "type": "array",
      "description": "An Array with the interfaces containing the credentials.",
      "items": {
        "type": "string",
        "relation": "manyToOne",
        "target": "https://codemeta.de/schemas/interface",
        "objectId": true,
        "database": "config"
      }
    }
  },
  "required": ["title"],
  "name": "pc"
}
