{
  "$id": "https://codemeta.de/schemas/usp",
  "type": "object",
  "collection": "assets",
  "allOf": [
    {
      "$ref": "https://codemeta.de/schemas/endpoint"
    }
  ],
  "i18n": {
    "de": {
      "singular": "usp",
      "plural": "usp",
      "description": "usp"
    }
  },
  "properties": {
    "type": {
      "type": "string",
      "const": "usp",
      "default": "usp"
    },
    "rack": {
      "description": "The rack of the usp.",
      "type": "string",
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/rack",
      "objectId": true
    },
    "hosts": {
      "description": "An array of hosts for the usp.",
      "type": "array",
      "items": {
        "type": "string",
        "relation": "manyToOne",
        "target": "https://codemeta.de/schemas/host",
        "objectId": true
      }
    },
    "state": {
      "description": "The state of the virtual machine.",
      "type": "string",
      "enum": ["online", "battery", "offline"]
    },
    "estimatedCharge": {
      "description": "The estimated charge",
      "type": "number"
    },
    "title": {
      "description": "The title of the usp.",
      "type": "string"
    },
    "description": {
      "description": "The description of the usp.",
      "type": "string"
    },
    "manufacturer": {
      "description": "The manufacturer of the usp.",
      "type": "string"
    },
    "interface": {
      "description": "The interface with the credentials.",
      "type": "string",
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/interface",
      "objectId": true,
      "database": "config"
    },
    "oids": {
      "title": "Diffrent oids for the usp.",
      "description": "Diffrent oids for the usp.",
      "type": "object",
      "properties": {
        "statusOID": {
          "description": "The oid thats used to query the status",
          "type": "string"
        },
        "estimatedChargeOID": {
          "description": "The oid thats used to query the estimatedChargeOID",
          "type": "string"
        }
      }
    }
  },
  "required": ["title"]
}
