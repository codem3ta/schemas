{
  "$id": "https://codemeta.de/schemas/bucket",
  "title": "Bucket",
  "collection": "buckets",
  "name": "bucket",
  "description": "A bucket for items taken to a customer",
  "type": "object",
  "properties": {
    "description": {
      "description": "The description of the bucket",
      "type": "string"
    },
    "user": {
      "description": "The user who created the bucket",
      "type": "string",
      "relation": "manyToOne",
      "objectId": true,
      "target": "https://codemeta.de/schemas/user"
    },
    "salesOrder": {
      "description": "The sales order to which the bucket belongs",
      "type": "string",
      "objectId": true,
      "target": "https://codemeta.de/schemas/salesOrder",
      "relation": "manyToOne"
    },
    "status": {
      "description": "The status of the bucket",
      "type": "string",
      "enum": [
        "OPEN",
        "CLOSED"
      ],
      "default": "OPEN"
    },
    "comment": {
      "description": "The comment of the bucket",
      "type": "string"
    },
    "customer": {
      "description": "The customer to which the items are taken",
      "type": "string",
      "objectId": true,
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/party"
    },
    "items": {
      "description": "The items in the bucket",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "article": {
            "description": "The article in the bucket",
            "type": "string",
            "objectId": true,
            "relation": "manyToOne",
            "target": "https://codemeta.de/schemas/article"
          },
          "quantity": {
            "description": "The quantity of the article",
            "type": "number",
            "minimum": 1
          }
        }
      }
    }
  },
  "required": [
    "user",
    "customer"
  ],
  "unevaluatedProperties": false
}