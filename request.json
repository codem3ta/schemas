{
  "$id": "https://codemeta.de/schemas/request",
  "title": "Request",
  "collection": "requests",
  "description": "A support request",
  "type": "object",
  "properties": {
    "title": { "description": "The subject of the request", "type": "string" },
    "description": {
      "description": "The content of the request",
      "type": "string"
    },
    "linkedParty": {
      "description": "The party linked to the request",
      "type": "string",
      "objectId": true,
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/party"
    },
    "assignedTeam": {
      "description": "The team assigned to the request",
      "type": "string",
      "objectId": true,
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/team",
      "database": "config"
    },
    "assignedUser": {
      "description": "The user assigned to the request",
      "type": "string",
      "objectId": true,
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/user",
      "database": "config"
    },
    "reportedBy": {
      "description": "The Person that reported the request",
      "type": "string",
      "objectId": true,
      "relation": "manyToOne",
      "target": "https://codemeta.de/schemas/party"
    },
    "status": {
      "description": "The status of the request",
      "type": "string",
      "enum": ["NEW", "IN_PROGRESS", "COMPLETED"]
    },
    "key": {
      "description": "The unique Key to identify the request",
      "type": "string"
    },
    "type": {
      "description": "The Type of the request",
      "type": "string"
    },
    "linkedAssets": {
      "type": "array",
      "description": "A List of all Assets that are used in the Request",
      "items": {
        "type": "string",
        "objectId": true,
        "relation": "manyToOne",
        "target": "https://codemeta.de/schemas/asset",
        "database": "config",
        "description": "The ID of the Asset."
      }
    },
    "tanss": {
      "description": "The tanss ID of the request",
      "type": "number"
    },
    "dueAt": {
      "description": "The date when the Request is due",
      "type": "string",
      "format": "date-time"
    },
    "priority": {
      "description": "The Priority of the Ticket",
      "type": "integer",
      "minimum": 1,
      "maximum": 5
    },
    "tags": {
      "description": "Custom Tags set in the Frontend",
      "type": "array",
      "items": {
        "type": "string",
        "description": "The Name of the Tag"
      }
    },
    "note": {
      "description": "An Internal Note for the Ticket User",
      "type": "string"
    }
  },
  "required": ["title"],
  "name": "request",
  "unevaluatedProperties": false,
  "inheritPermissionsFrom": "linkedParty"
}
