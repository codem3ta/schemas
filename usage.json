{
  "$id": "https://codemeta.de/schemas/usage",
  "title": "Usage",
  "description": "Information about a usage",
  "type": "object",
  "collection": "usages",
  "i18n": {
    "de": {
      "singular": "Verbrauch",
      "plural": "Verbrauch",
      "description": "Der Verbrauch eines Artikels zu einem Kunden"
    }
  },
  "properties": {
    "articleNumber": {
      "description": "The article number",
      "type": "string"
    },
    "customerId": {
      "description": "The customer associated with the usag",
      "type": "string",
      "objectId": true,
      "target": "https://codemeta.de/schemas/party"
    },
    "description": {
      "description": "The description",
      "type": "string"
    },
    "info": {
      "description": "The information object",
      "type": "object"
    },
    "lastBilledAt": {
      "description": "The last billing date of the usag",
      "type": "string",
      "format": "date"
    },
    "interval": {
      "description": "The interval of the billing in miliseconds",
      "type": "integer",
      "minimum": 0
    },
    "quantity": {
        "description": "The quantity of the article",
        "type": "number",
        "default": 1
    }
  },
  "required": [
    "articleNumber",
    "quantity",
    "interval",
    "customerId"
  ],
  "name": "usage"
}
